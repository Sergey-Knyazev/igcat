<configuration>
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd/MM/YYYY HH:mm:ss.SSS}\t| %-5level\t[%thread]\t%logger{50}\t| %msg%n</pattern>
        </encoder>
        <target>System.err</target>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDERR" />
    </root>
</configuration>
